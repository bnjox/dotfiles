// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
{
  "audio": {
    "experimental.legacy_audio_compatible": false,
    "experimental.denoise": false,
    "experimental.auto_speaker_volume": false
  },
  "outline_panel": {
    "indent_size": 15.0,
    "folder_icons": true,
    "file_icons": true
  },
  "tabs": {
        "file_icons": true
    },
  "debugger": {
    "button": false
  },
  "diagnostics": {
    "button": true
  },
  "status_bar": {
    "cursor_position_button": false,
    "active_language_button": true
  },
  "close_on_file_delete": true,
  "completions": {
    "lsp_insert_mode": "replace",
    "lsp_fetch_timeout_ms": 10
  },
  "inlay_hints": {
    "enabled": false
  },
  "toolbar": {
    "selections_menu": true,
    "quick_actions": true,
    "breadcrumbs": true
  },
  "minimap": {
    "max_width_columns": 74,
    "thumb_border": "none"
  },
  "relative_line_numbers": false,
  "multi_cursor_modifier": "alt",
  "agent_buffer_font_size": 12.0,
  "agent_ui_font_size": 14.0,
  "buffer_font_weight": 400.0,
  "buffer_font_size": 15.0,
  "context_servers": {
    "svelte": {
      "source": "custom",
      "enabled": true,
      "command": "npx",
      "args": [
        "-y",
        "@sveltejs/mcp"
      ],
      "env": {}
    }
  },
  "agent": {
    "default_width": 630.0,
    "button": true,
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    },
    "default_profile": "write"
  },
  "theme": "One Dark",
  "icon_theme": "Material Icon Theme",
  "features": {
    "edit_prediction_provider": "zed"
  },
  "unnecessary_code_fade": 0.5,
  "vim_mode": false,
  "restore_on_startup": "last_workspace",
  "show_edit_predictions": true,
  "show_whitespaces": "selection",
  "calls": {
    "mute_on_join": true
  },
  "title_bar": {
    "show_onboarding_banner": true,
    "show_project_items": true,
    "show_branch_name": true,
    "show_branch_icon": true,
    "show_user_picture": false,
    "show_sign_in": false,
    "show_menus": false
  },
  "scrollbar": {
    "cursors": false,
    "git_diff": true,
    "search_results": false,
    "selected_text": false,
    "axes": {
      "horizontal": false,
      "vertical": true
    }
  },
  "middle_click_paste": false,
  "gutter": {
    "folds": true,
    "breakpoints": false,
    "line_numbers": true,
    "runnables": false,
    "min_line_number_digits": 0
  },
  "indent_guides": {
    "line_width": 1,
    "enabled": true,
    "coloring": "indent_aware"
  },
  "search": {
    "button": false
  },
  "project_panel": {
    "hide_root": false,
    "auto_reveal_entries": true,
    "indent_size": 15.0,
    "git_status": true,
    "file_icons": true,
    "hide_gitignore": false,
    "button": true,
    "sticky_scroll": false,
    "starts_open": true,
    "auto_fold_dirs": false,
    "scrollbar": {
      "show": "auto"
    }
  },
  "collaboration_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "show_call_status_icon": false,
  "autosave": "on_focus_change",
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "formatter": "language_server",
  "soft_wrap": "editor_width",
  "tab_size": 2,
  "telemetry": {
    "diagnostics": true,
    "metrics": true
  },
  "disable_ai": false,
  "edit_predictions": {
    "mode": "subtle"
  },
  "terminal": {
    "button": false,
    "cursor_shape": "bar"
  },
  "auto_install_extensions": {
    "html": true,
    "svelte": true,
    "biome": true,
    "emmet": true,
    "sql": true
  },
  "languages": {
    "C": {
      "format_on_save": "on"
    },
    "Go": {
      "tab_size": 4
    },
    "JavaScript": {
      "formatter": [
        {
          "code_action": "source.fixAll.biome"
        },
        {
          "code_action": "source.organizeImports.biome"
        },
        {
          "language_server": {
            "name": "biome"
          }
        }
      ]
    },
    "Python": {
      "wrap_guides": [
        80
      ],
      "tab_size": 4,
      "language_servers": [
        "basedpyright",
        "ruff",
        "..."
      ],
      "formatter": "language_server"
    },
    "Svelte": {
      "prettier": {
        "allowed": true
      }
    },
    "TypeScript": {
      "formatter": [
        {
          "code_action": "source.fixAll.biome"
        },
        {
          "code_action": "source.organizeImports.biome"
        },
        {
          "language_server": {
            "name": "biome"
          }
        }
      ]
    },
    "Zig": {
      "tab_size": 4
    }
  }
}
