// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
{
  "theme": "One Dark",
  "icon_theme": "Material Icon Theme",
  "features": {
    "edit_prediction_provider": "zed"
  },
  "unnecessary_code_fade": 0.5,
  "vim_mode": false,
  "restore_on_startup": "last_workspace",
  "show_edit_predictions": true,
  "show_whitespaces": "selection",
  "calls": {
    "mute_on_join": true
  },
  "title_bar": {
    "show_branch_icon": true,
    "show_user_picture": false,
    "show_sign_in": false,
    "show_menus": false
  },
  "scrollbar": {
    "cursors": false,
    "git_diff": true,
    "search_results": false,
    "selected_text": false,
    "axes": {
      "horizontal": false,
      "vertical": true
    }
  },
  "middle_click_paste": false,
  "gutter": {
    "runnables": false,
    "min_line_number_digits": 0
  },
  "indent_guides": {
    "coloring": "indent_aware"
  },
  "search": {
    "button": false
  },
  "project_panel": {
    "sticky_scroll": false,
    "starts_open": false,
    "auto_fold_dirs": false,
    "scrollbar": {
      "show": "auto"
    }
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": "never"
  },
  "notification_panel": {
    "button": false
  },
  "show_call_status_icon": false,
  "autosave": "on_focus_change",
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "formatter": "language_server",
  "soft_wrap": "editor_width",
  "tab_size": 2,
  "telemetry": {
    "diagnostics": true,
    "metrics": true
  },
  "disable_ai": false,
  "edit_predictions": {
    "mode": "subtle"
  },
  "terminal": {
    "button": false,
    "cursor_shape": "bar",
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "auto_install_extensions": {
    "html": true,
    "svelte": true,
    "biome": true,
    "emmet": true,
    "sql": true
  },
  "languages": {
    "C": {
      "format_on_save": "on"
    },
    "Go": {
      "tab_size": 4
    },
    "JavaScript": {
      "formatter": "language_server",
      // [{"language_server": {"name": "biome"}}],
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    },
    "Python": {
      "wrap_guides": [
        80
      ],
      "tab_size": 4,
      "language_servers": [
        "pyright",
        "ruff",
        "..."
      ],
      "formatter": "language_server"
    },
    "TypeScript": {
      "formatter": "language_server",
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    },
    "Zig": {
      "tab_size": 4
    }
  },
  "prettier": {
    "allowed": false
  },
  "experimental.theme_overrides": {
    "syntax": {
      "comment": {
        "font_style": "italic",
        "font_weight": 400
      }
    }
  }
}

